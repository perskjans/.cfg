#!/bin/sh

logout_cmd="killall Xorg"
case "$WINDOWMANAGER" in
    herbstluftwm) logout_cmd="herbstclient quit" ;;
esac

options=$(echo -e "1. Hibernate\n2. Lock\n3. Logout\n4. Reboot\n5. Shutdown\n6. Suspend" | dmenu -c -l 6 -i -p Do:)
case "$options" in
    *Hibernate) systemctl hibernate & ;;
    *Lock) i3lock -ec 808080 & ;;
    *Logout) $logout_cmd & ;;
    *Reboot) systemctl reboot & ;;
    *Shutdown) systemctl poweroff & ;;
    *Suspend) systemctl suspend & ;;
esac

exit 0
