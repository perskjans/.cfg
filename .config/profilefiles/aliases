alias gcl='~/bin/gitutils clone'
alias gfa='~/bin/gitutils findall'
alias gpa='~/bin/gitutils pullall'

alias gsetupstream='git push --set-upstream origin $(git branch | grep "\*" | cut -d" " -f2)'
alias gdeleteupstream='git push --delete origin $(git branch | grep "\*" | cut -d" " -f2)'

