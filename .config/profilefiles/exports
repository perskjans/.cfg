PATH=~/bin:$PATH
export PATH

if [ $LANG == '' ]; then
    export LANG="en_US.UTF-8"
    export LC_CTYPE="en_US.UTF-8"
    export LC_NUMERIC="en_US.UTF-8"
    export LC_TIME="en_US.UTF-8"
    export LC_COLLATE=C
    export LC_MONETARY="en_US.UTF-8"
    export LC_MESSAGES="en_US.UTF-8"
    export LC_PAPER="en_US.UTF-8"
    export LC_NAME="en_US.UTF-8"
    export LC_ADDRESS="en_US.UTF-8"
    export LC_TELEPHONE="en_US.UTF-8"
    export LC_MEASUREMENT="en_US.UTF-8"
    export LC_IDENTIFICATION="en_US.UTF-8"
    export LC_ALL="en_US.UTF-8"
fi

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_DESKTOP_DIR="$HOME/dsk"
export XDG_DOWNLOAD_DIR="$HOME/dwn"
export XDG_TEMPLATES_DIR="$HOME/tpl"
export XDG_PUBLICSHARE_DIR="$HOME/pub"
export XDG_DOCUMENTS_DIR="$HOME/doc"
export XDG_MUSIC_DIR="$HOME/mus"
export XDG_PICTURES_DIR="$HOME/pic"
export XDG_VIDEOS_DIR="$HOME/vid"

export VIMINIT="source ~/.config/nvim/init.vim"

[ `which nvim` ] && export EDITOR=nvim || export EDITOR=vim
[ `which st` ] && export TERMINAL=st || export TERMINAL=xterm
export BROWSER=chromium

# colored GCC warnings and errors
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

export QT_STYLE_OVERRIDE=gtk
export QT_SELECT=qt5

